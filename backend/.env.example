NODE_ENV=development
PORT=3000
API_VERSION=v1

# Server Host - Use 0.0.0.0 to accept connections from local network devices
# This allows real phones/tablets on the same WiFi to connect
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/echoai_dev

# JWT
JWT_SECRET=CHANGE_THIS_SECRET_KEY_TO_SOMETHING_SECURE
JWT_EXPIRES_IN=7d

# Vapi
VAPI_API_KEY=YOUR_VAPI_API_KEY_HERE
VAPI_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_HERE

# Pipedream
PIPEDREAM_WEBHOOK_URL=YOUR_PIPEDREAM_WEBHOOK_URL_HERE

# CORS - In development, allow all origins for local network testing
# For production, set specific allowed origins
CORS_ORIGIN=*

# Logging
LOG_LEVEL=debug
